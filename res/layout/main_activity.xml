<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.xidea.app.dao.Main" >

    <!--
         As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions.
    -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!-- 设置handle和content的id -->

        <RelativeLayout
            android:layout_width="140dip"
            android:layout_height="20dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dip"
            android:layout_marginTop="12dip"
            android:background="#CCFFFFFF" >

            <MediaController
                android:id="@+id/mediaController"
                android:layout_width="240dip"
                android:layout_height="20dip" >
            </MediaController>
        </RelativeLayout>

        <FrameLayout
                android:layout_alignParentBottom="true"
                
            android:layout_width="match_parent"
            android:layout_height="200dip" >

            <SlidingDrawer
                android:id="@+id/slidingdrawer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:clickable="true"
                android:content="@+id/content"
                android:handle="@+id/handle"
                android:minHeight="0dip"
                android:orientation="vertical" >

                <!-- 设置handle，就是用一个图片按钮来处理滑动抽屉的 -->

                <ImageButton
                    android:id="@id/handle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#FF999999"
                    android:paddingBottom="4dip"
                    android:paddingTop="8dip"
                    android:src="@android:drawable/arrow_up_float" />
                <!-- 设置内容，一个布局View，其中包含一个文本框，当我们拖动的时候就会看到 -->

                <LinearLayout
                    android:id="@id/content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff" >

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="这是一个滑动式抽屉的示例"
                        android:textColor="#000000"
                        android:textSize="18px"
                        android:textStyle="bold" >
                    </TextView>
                </LinearLayout>
            </SlidingDrawer>
        </FrameLayout>
    </RelativeLayout>

    <fragment
        android:id="@+id/navigation_drawer"
        android:name="org.xidea.app.dao.NavigationFragment"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/main_drawer" />
    <!--
         android:layout_gravity="start" tells DrawerLayout to treat
         this as a sliding drawer on the left side for left-to-right
         languages and on the right side for right-to-left languages.
         If you're not building against API 17 or higher, use
         android:layout_gravity="left" instead.
    -->
    <!--
         The drawer is given a fixed width in dp and extends the full height of
         the container.
    -->

</android.support.v4.widget.DrawerLayout>